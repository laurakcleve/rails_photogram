var like_button = $('#like_<%= @post.id %>');
var likers = $('#likers_<%= @post.id %>');

like_button
  .removeClass('glyphicon-heart')
  .addClass('glyphicon-heart-empty')
  .attr('href', '/posts/<%= @post.id %>/like');

likers
  .removeClass('post__likers')
  .html('<%= j (render partial: "posts/likes", locals: { post: @post } ) %>');