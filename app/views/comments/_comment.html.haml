.comment
  .comment-username
    = comment.user.user_name
  .comment-content
    = comment.content
  - if comment.user == current_user
    .comment-delete
      = link_to post_comment_path(post, comment), remote: true, method: :delete, data: { confirm: "Are you sure?" } do
        %span.glyphicon.glyphicon-remove{"aria-hidden" => "true"}